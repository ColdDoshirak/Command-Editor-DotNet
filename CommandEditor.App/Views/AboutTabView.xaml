<UserControl x:Class="CommandEditor.App.Views.AboutTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandEditor.App.Views"
             xmlns:converters="clr-namespace:CommandEditor.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToOppositeBoolConverter x:Key="BoolToOppositeBoolConverter"/>
        
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,1,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Selector Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AboutMeButton" 
                    Content="About Me" 
                    Style="{StaticResource TabButtonStyle}"
                    Click="AboutMeButton_Click" 
                    Margin="0"
                    MinWidth="100"/>
            <Button x:Name="InstructionsButton" 
                    Content="Instructions" 
                    Style="{StaticResource TabButtonStyle}"
                    Click="InstructionsButton_Click"
                    MinWidth="100"/>
            <Button x:Name="VersionInfoButton" 
                    Content="Version Info" 
                    Style="{StaticResource TabButtonStyle}"
                    Click="VersionInfoButton_Click"
                    MinWidth="100"/>
        </StackPanel>

        <!-- Content Area -->
        <Grid Grid.Row="1" x:Name="ContentArea">
            <!-- About Me Tab Content -->
            <ScrollViewer x:Name="AboutMeContent" Visibility="Visible">
                <StackPanel MaxWidth="700" HorizontalAlignment="Left">
                    <TextBlock Text="About Developer" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <TextBlock>
                        <Run Text="{Binding DeveloperBio}"/>
                        <LineBreak/>
                        <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="{Binding DeveloperTwitchUrl}">Twitch: https://twitch.tv/HotDoshirak</Hyperlink>
                        <LineBreak/>
                        <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="{Binding DeveloperGitHubUrl}">GitHub: https://github.com/colddoshirak</Hyperlink>
                        <LineBreak/>
                        <Hyperlink Command="{Binding OpenUrlCommand}" CommandParameter="{Binding DeveloperDonationUrl}">Donate: https://www.donationalerts.com/r/hotdoshirak1</Hyperlink>
                        <LineBreak/>
                        <Run Text="Made in 2025 with ai lol"/>
                    </TextBlock>

                    <GroupBox Header="Meme Gallery" Margin="0,15,0,0">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxHeight="250">
                            <ItemsControl ItemsSource="{Binding MemeFilePaths}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding }" MaxHeight="200" Margin="5" Stretch="Uniform"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Instructions Tab Content -->
            <ScrollViewer x:Name="InstructionsContent" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Instructions" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Документация" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Вся документация теперь находится в Wiki на GitHub:" Margin="0,0,0,10"/>
                        
                        <TextBlock Margin="0,0,0,10">
                            <Hyperlink Click="GitHubWikiLink_Click">
                                https://github.com/ColdDoshirak/Command-Editor-DotNet/wiki
                            </Hyperlink>
                        </TextBlock>
                        
                        <TextBlock Text="Пожалуйста, посетите эту страницу для получения полной документации по приложению, настройке и устранению неполадок." 
                                   TextWrapping="Wrap" Margin="0,0,0,10"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Version Info Tab Content -->
            <ScrollViewer x:Name="VersionInfoContent" Visibility="Collapsed">
                <StackPanel MaxWidth="700" HorizontalAlignment="Left">
                    <TextBlock Text="Version Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <StackPanel>
                        <TextBlock Text="Command Editor" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock><Run Text="Application:" FontWeight="Bold"/> Twitch Bot Command Editor</TextBlock>
                            <TextBlock><Run Text="Version:" FontWeight="Bold"/> <Run Text="{Binding CurrentVersion}"/></TextBlock>
                            <TextBlock><Run Text="Release Date:" FontWeight="Bold"/> 2025-10-17</TextBlock>
                            <TextBlock><Run Text="Framework:" FontWeight="Bold"/> .NET 6 WPF</TextBlock>
                            <TextBlock Margin="0,10,0,0">
                                <Run Text="Дата последнего обновления: "/>
                                <Run Text="{Binding CurrentDate}"/>
                                <Run Text=". Прикол, тут дата сегодняшняя, чтоб свежо было"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <Separator Margin="0,0,0,15"/>
                        
                        <GroupBox Header="Updates" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Check for updates from GitHub repository" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="{Binding UpdateStatus}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10" 
                                           FontStyle="Italic" 
                                           Foreground="Gray" 
                                           FontSize="10"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="CheckUpdatesButton" 
                                            Content="{Binding CheckUpdatesButtonText}" 
                                            Command="{Binding CheckForUpdatesCommand}"
                                            Margin="0,0,10,0"
                                            MinWidth="130"
                                            Padding="10,5"
                                            IsEnabled="{Binding IsCheckingForUpdates, Converter={StaticResource BoolToOppositeBoolConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#2196F3"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#1565C0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                        <Setter Property="Foreground" Value="#666666"/>
                                                        <Setter Property="BorderBrush" Value="#999999"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <Button Content="Open GitHub Repository" 
                                            Command="{Binding OpenGitHubCommand}"
                                            MinWidth="140"
                                            Padding="10,5">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#45a049"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Padding" Value="10,5"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#45a049"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#3d8b40"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>