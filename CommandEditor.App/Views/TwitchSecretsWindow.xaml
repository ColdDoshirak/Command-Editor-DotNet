<Window x:Class="CommandEditor.App.Views.TwitchSecretsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Twitch Authentication"
        Width="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Client ID:" Margin="0,0,0,5" FontWeight="SemiBold" />
            <TextBox x:Name="ClientIdBox" Margin="0,0,0,15" />
            
            <TextBlock Text="Access Token:" Margin="0,0,0,5" FontWeight="SemiBold" />
            <PasswordBox x:Name="AccessTokenBox" Margin="0,0,0,15" />
            
            <TextBlock Text="Refresh Token (optional):" Margin="0,0,0,5" FontWeight="SemiBold" />
            <PasswordBox x:Name="RefreshTokenBox" Margin="0,0,0,10" />
        </StackPanel>

        <TextBlock Grid.Row="1" 
                   Text="Enter your Twitch API credentials to connect the bot."
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   Margin="0,0,0,15" />

        <Button Grid.Row="2" 
                Content="Get Token from Twitch Token Generator"
                HorizontalAlignment="Left"
                Margin="0,0,0,15"
                Padding="10,5"
                Click="OnGetToken" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="0,0,10,0" IsDefault="True" Click="OnSave" />
            <Button Content="Cancel" Width="80" IsCancel="True" Click="OnCancel" />
        </StackPanel>
    </Grid>
</Window>
